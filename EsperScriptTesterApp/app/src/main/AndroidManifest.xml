<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.esperscripttesterapp">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ImplicitActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.esperscripttesterapp.LAUNCH_IMPLICIT_ACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".ExplicitActivity">
            <intent-filter>
                <action android:name="com.example.esperscripttesterapp.LAUNCH_EXPLICIT_ACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name=".TestBackgroundService"
            android:exported="true" />
        <service
            android:name=".TestForegroundService"
            android:exported="true" />

        <receiver
            android:name=".TestBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.esperscripttesterapp.EXPLICIT_BROADCAST" />
                <action android:name="com.example.esperscripttesterapp.IMPLICIT_BROADCAST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>