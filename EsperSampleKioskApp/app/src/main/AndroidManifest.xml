<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.esper.kioskapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <!-- Note the keepScreenOn parameter below; it will help keep the screen
             ON when this activity is in the foreground -->
        <activity
            android:name=".EsperKioskActivity"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:keepScreenOn="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <!-- Don't add the HOME intent here, as the Esper Agent will launch this Kiosk app
                     when it's set to "run on boot" in the template -->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>